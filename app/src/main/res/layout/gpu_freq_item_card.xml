<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Drag handle icon -->
        <ImageView
            android:id="@+id/drag_handle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/drag_handle"
            android:padding="12dp"
            android:src="@drawable/ic_drag_handle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorOnSurfaceVariant" />

        <!-- Frequency Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintBottom_toTopOf="@+id/specs_container"
            app:layout_constraintEnd_toStartOf="@+id/btn_copy"
            app:layout_constraintStart_toEndOf="@+id/drag_handle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="600 MHz" />

        <!-- Subtitle (for legacy/header items) -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="Subtitle"
            tools:visibility="visible" />

        <!-- Spec Details Grid (for frequency items) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/specs_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:visibility="visible">

            <!-- Bus Max -->
            <ImageView
                android:id="@+id/icon_bus_max"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_memory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="?attr/colorPrimary" />

            <TextView
                android:id="@+id/bus_max_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="monospace"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintBottom_toBottomOf="@+id/icon_bus_max"
                app:layout_constraintStart_toEndOf="@+id/icon_bus_max"
                app:layout_constraintTop_toTopOf="@+id/icon_bus_max"
                tools:text="300" />

            <!-- Bus Min -->
            <ImageView
                android:id="@+id/icon_bus_min"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_memory"
                app:layout_constraintBottom_toBottomOf="@+id/icon_bus_max"
                app:layout_constraintStart_toEndOf="@+id/bus_max_value"
                app:layout_constraintTop_toTopOf="@+id/icon_bus_max"
                app:tint="?attr/colorSecondary" />

            <TextView
                android:id="@+id/bus_min_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="monospace"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintBottom_toBottomOf="@+id/icon_bus_min"
                app:layout_constraintStart_toEndOf="@+id/icon_bus_min"
                app:layout_constraintTop_toTopOf="@+id/icon_bus_min"
                tools:text="100" />

            <!-- Bus Freq -->
            <ImageView
                android:id="@+id/icon_bus_freq"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_frequency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_bus_max"
                app:tint="?attr/colorTertiary" />

            <TextView
                android:id="@+id/bus_freq_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="monospace"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintBottom_toBottomOf="@+id/icon_bus_freq"
                app:layout_constraintStart_toEndOf="@+id/icon_bus_freq"
                app:layout_constraintTop_toTopOf="@+id/icon_bus_freq"
                tools:text="0" />

            <!-- Voltage Level -->
            <ImageView
                android:id="@+id/icon_voltage"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_battery"
                app:layout_constraintBottom_toBottomOf="@+id/icon_bus_freq"
                app:layout_constraintStart_toEndOf="@+id/bus_freq_value"
                app:layout_constraintTop_toTopOf="@+id/icon_bus_freq"
                app:tint="?attr/colorError" />

            <TextView
                android:id="@+id/voltage_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="monospace"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintBottom_toBottomOf="@+id/icon_voltage"
                app:layout_constraintStart_toEndOf="@+id/icon_voltage"
                app:layout_constraintTop_toTopOf="@+id/icon_voltage"
                tools:text="SVS_L1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Copy Icon -->
        <ImageButton
            android:id="@+id/btn_copy"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/copy"
            android:padding="12dp"
            android:src="@drawable/ic_content_copy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorOnSurfaceVariant" />

        <!-- Delete Icon -->
        <ImageButton
            android:id="@+id/delete_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete"
            android:padding="12dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorError" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
