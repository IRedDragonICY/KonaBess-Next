<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    style="@style/Widget.Material3.CardView.Elevated">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Main content row with drag handle -->
        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Drag handle icon -->
            <ImageView
                android:id="@+id/drag_handle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_drag_handle"
                android:contentDescription="@string/drag_handle"
                android:layout_marginEnd="16dp"
                android:tint="?attr/colorOnSurfaceVariant" />

            <!-- Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Frequency Title -->
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Subtitle (for legacy/header items) -->
                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />

                <!-- Spec Details Grid (for frequency items) -->
                <LinearLayout
                    android:id="@+id/specs_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <!-- Row 1: Bus Max & Bus Min -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Bus Max -->
                        <LinearLayout
                            android:id="@+id/bus_max_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginEnd="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_memory"
                                android:tint="?attr/colorPrimary"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:id="@+id/bus_max_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Max:"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/bus_max_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="?attr/colorOnSurface"
                                android:fontFamily="monospace" />
                        </LinearLayout>

                        <!-- Bus Min -->
                        <LinearLayout
                            android:id="@+id/bus_min_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_memory"
                                android:tint="?attr/colorSecondary"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:id="@+id/bus_min_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Min:"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/bus_min_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="?attr/colorOnSurface"
                                android:fontFamily="monospace" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Row 2: Bus Freq & Voltage Level -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <!-- Bus Freq -->
                        <LinearLayout
                            android:id="@+id/bus_freq_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginEnd="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_frequency"
                                android:tint="?attr/colorTertiary"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:id="@+id/bus_freq_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level:"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/bus_freq_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="?attr/colorOnSurface"
                                android:fontFamily="monospace" />
                        </LinearLayout>

                        <!-- Voltage Level -->
                        <LinearLayout
                            android:id="@+id/voltage_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_battery"
                                android:tint="?attr/colorError"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:id="@+id/voltage_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Volt:"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/voltage_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="?attr/colorOnSurface"
                                android:fontFamily="monospace" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Delete icon button -->
            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/delete"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:tint="?attr/colorError"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
