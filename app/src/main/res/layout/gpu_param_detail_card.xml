<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/param_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="16dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/param_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:importantForAccessibility="no"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/param_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/param_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <HorizontalScrollView
                android:id="@+id/freq_buttons_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/freq_buttons_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- Buttons will be added programmatically or could be hardcoded here.
                         Hardcoding is better for preview but programmatically is fine too.
                         Let's proper hardcode for simpler Adapter logic?
                         No, repetitive XML. Let's start with container and add chunks?
                         Actually, hardcoding 6 buttons in XML is verbose but safe. -->
                    <Button
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:id="@+id/btn_minus_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-20"
                        android:textSize="12sp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:layout_marginEnd="8dp"/>
                    <Button
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:id="@+id/btn_minus_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-10"
                        android:textSize="12sp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:layout_marginEnd="8dp"/>
                    <Button
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:id="@+id/btn_minus_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-5"
                        android:textSize="12sp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:layout_marginEnd="8dp"/>
                    <Button
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:id="@+id/btn_plus_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+5"
                        android:textSize="12sp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:layout_marginEnd="8dp"/>
                    <Button
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:id="@+id/btn_plus_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+10"
                        android:textSize="12sp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:layout_marginEnd="8dp"/>
                    <Button
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:id="@+id/btn_plus_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+20"
                        android:textSize="12sp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"/>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <ImageView
            android:id="@+id/chevron_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            android:importantForAccessibility="no"
            android:alpha="0.6" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
